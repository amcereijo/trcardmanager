<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2A4678"
    android:layout_gravity="center"
    >
    
    <ImageView android:src="@drawable/recover_password"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	     android:layout_marginBottom="20sp"
	     android:layout_marginLeft="14sp"
	     android:layout_marginRight="14sp"
	     android:layout_marginTop="60sp"
	     android:contentDescription="@string/recover_password_btn"
        />
    
    <EditText
	     android:id="@+id/recover_password_email"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal"
	     android:layout_marginBottom="20sp"
	     android:layout_marginLeft="14sp"
	     android:layout_marginRight="14sp"
	     android:layout_marginTop="20sp"
	     android:background="@drawable/login_text_border"
	     android:hint="@string/login_email_hint"
	     android:singleLine="true"
	     android:textColor="#2A4678"
	     android:inputType="text|textEmailAddress" />
    
    <Button
         android:id="@+id/btn_recover_password_enter"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginLeft="14sp"
         android:layout_marginRight="14sp"
         android:layout_marginTop="10sp"
         android:background="@drawable/login_btn_border"
         android:focusable="true"
         android:clickable="true"
         android:onClick="doRecoverPassword"
         android:text="@string/recover_password_btn"
         android:textColor="#FFFFFF"
         android:textStyle="bold"
         android:typeface="serif" >
         <requestFocus />
     </Button>
     
    <TextView android:id="@+id/recover_password_error"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_horizontal|center_vertical"
	     android:gravity="center_vertical|center_horizontal"
	     android:layout_marginLeft="14sp"
	     android:layout_marginRight="14sp"
	     android:layout_marginTop="20sp"
	     android:textColor="@android:color/white"/>

</LinearLayout>